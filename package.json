{
  "name": "extended-git-functionalities",
  "displayName": "extended-git-functionalities",
  "description": "Provide additional git capabilities",
  "publisher": "MohammadHammad1796",
  "version": "1.0.0",
  "engines": {
    "vscode": ">=1.76.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "images/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.selectForCompare",
        "title": "Select for Compare"
      },
      {
        "command": "extension.deSelectForCompare",
        "title": "DeSelect for Compare"
      },
      {
        "command": "extension.compareWithSelected",
        "title": "Compare with Selected"
      }
    ],
    "menus": {
      "scm/resourceState/context": [
        {
          "command": "extension.selectForCompare",
          "when": "extension.showSelectForCompare",
          "group": "navigation"
        },
        {
          "command": "extension.deSelectForCompare",
          "when": "extension.showDeSelectForCompare",
          "group": "navigation"
        },
        {
          "command": "extension.compareWithSelected",
          "when": "extension.showCompareWithSelected",
          "group": "navigation"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MohammadHammad1796/git-extensions"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.76.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}